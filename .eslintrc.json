{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": ["react", "@typescript-eslint"],
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "airbnb/hooks"
  ],
  "ignorePatterns": ["node_modules/", "build/", "dist/", "e2e/", "reportWebVitals.ts"],
  "rules": {
    "@typescript-eslint/semi": "off",
    "max-len": "off",
    // temp off
    "no-console": "off"
  }
}
